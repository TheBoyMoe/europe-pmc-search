<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/list_item"
              android:orientation="vertical"
              android:padding="@dimen/dimen_normal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:id="@+id/article_title"
        tools:text="Anaemia and the secondary causes of consuming to many cakes"
        android:singleLine="true"
        android:paddingBottom="@dimen/dimen_xsmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/journal_title"
        android:paddingTop="@dimen/dimen_xsmall"
        android:paddingBottom="@dimen/dimen_xsmall"
        tools:text="Journal of Biological Medicine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/article_authors"
        android:paddingTop="@dimen/dimen_xsmall"
        android:paddingBottom="@dimen/dimen_small"
        tools:text="A. Samuels, T. Pipps, J.A. Brown, et al"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="@dimen/dimen_xsmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="page: "
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/page_information"
                tools:text="110-24"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_normal"
            android:paddingStart="@dimen/dimen_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="issue: "
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/journal_issue"
                tools:text="12"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_normal"
            android:paddingStart="@dimen/dimen_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="vol: "
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/journal_volume"
                tools:text="131"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <!--<LinearLayout-->
            <!--android:orientation="horizontal"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content">-->

            <!--<TextView-->
                <!--android:text="Year: "-->
                <!--android:singleLine="true"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"/>-->

            <TextView
                android:id="@+id/publication_year"
                android:paddingLeft="@dimen/dimen_normal"
                android:paddingStart="@dimen/dimen_normal"
                tools:text="2014"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        <!--</LinearLayout>-->


    </LinearLayout>


</LinearLayout>